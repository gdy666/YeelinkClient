<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/item_bg1" 
    android:padding="0.0dip"
    android:layout_width="fill_parent"
    android:layout_height="55.0dip">
    <TextView
        android:id="@+id/dev_num" 
        android:textSize="20.0dip" 
        android:textColor="@android:color/darker_gray" 
        android:gravity="center" 
        android:layout_width="50.0dip" 
        android:layout_height="fill_parent" 
        android:layout_centerVertical="true" />
    <ImageView 
        android:id="@+id/iv_shuxian" 
        android:background="@drawable/shuxian" 
        android:layout_width="wrap_content" 
        android:layout_height="40.0dip" 
        android:layout_toRightOf="@id/dev_num"
        android:layout_centerVertical="true" />
    <LinearLayout
        android:id="@+id/maplist_m" 
        android:gravity="center_vertical" 
        android:orientation="vertical" 
        android:paddingRight="50.0dip" 
        android:layout_width="wrap_content" 
        android:layout_height="55.0dip" 
        android:layout_marginLeft="10.0dip" 
        android:layout_toRightOf="@id/iv_shuxian" 
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/dev_title"
            android:textSize="18.0sp" 
            android:textColor="@android:color/black"
            android:ellipsize="end" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_margin="0.0dip" 
            android:singleLine="true" />
        <TextView
            android:id="@+id/dev_about"
            android:textSize="12.0sp" 
            android:ellipsize="end"  
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:singleLine="true" />
    </LinearLayout>

</RelativeLayout>
